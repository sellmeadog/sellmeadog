{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@sellmeadog/data-source/scryfall": [
        "libs/data-source/scryfall/src/index.ts"
      ],
      "@sellmeadog/etl-extract-scryfall": [
        "libs/etl/extract-scryfall/src/index.ts"
      ],
      "@sellmeadog/etl/magic-types": ["libs/etl/magic-types/src/index.ts"],
      "@sellmeadog/etl/scryfall-types": [
        "libs/etl/scryfall-types/src/index.ts"
      ],
      "@sellmeadog/extensions/testing": [
        "libs/extensions/testing/src/index.ts"
      ],
      "@sellmeadog/rxjs/operators": ["libs/rxjs/operators/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
